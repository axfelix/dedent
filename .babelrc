{
  "env": {
    "legacy": {
      "plugins": [["add-module-exports", { "addDefaultProperty": true }]],
      "presets": [
        [
          "@babel/preset-env",
          {
            "modules": "commonjs",
            "targets": {
              "node": 10
            }
          }
        ]
      ]
    },
    "modern": {
      "presets": [
        [
          "@babel/preset-env",
          {
            "modules": false,
            "bugfixes": true,
            "targets": {
              "esmodules": true
            }
          }
        ]
      ]
    }
  },
  "presets": [
    [
      "@babel/preset-env",
      {
        "modules": "commonjs",
        "targets": {
          "node": "current"
        }
      }
    ]
  ],
  "plugins": ["@babel/plugin-transform-flow-comments"]
}
